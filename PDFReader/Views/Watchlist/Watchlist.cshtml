@model PDFReader.Models.WatchlistModel

@{ ViewBag.Title = "Watchlist Company Codes"; }

<!-- data tables css -->
<link rel="stylesheet" href="@Url.Content("~/Content/assets/css/plugins/dataTables.bootstrap4.min.css")">
<link href="@Url.Content("~/Content/Custom.css")" rel="stylesheet" />

<!-- [ Main Content ] start -->
<form id="frm_watchlist" method="post" action="#" role="form" novalidate="novalidate">
    <div class="row">
        <!-- [ sample-page ] start -->
        <div class="col-sm-12">
            <div class="card">

                <div class="card-header">
                    <h5>Add/Edit/Delete Watchlist Company Codes</h5>

                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group fill">
                                        @Html.TextBoxFor(Model => Model.COMPANY_ID, new { @class = "form-control", placeholder = "Enter Company Code", @required = "required" })
                                        @Html.TextBoxFor(Model => Model.ACTION, new { @class = "hide_column", value = "1" })
                                        @Html.TextBoxFor(Model => Model.WATCHLIST_ID, new { @class = "hide_column" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group fill">
                                        @Html.TextBoxFor(Model => Model.COMPANY_NAME, new { @class = "form-control", placeholder = "Enter Company Name", @required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group fill">
                                        <div class="btn notifications btn-success has-ripple" data-type="success" data-from="top" data-align="right" id="btnsubmit">Submit</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="row" style="padding:5px; background-color:#fbf4bd;">
                                <h6>For Bulk Upload</h6><br />
                                <h6 class="text-danger">Note: This action will delete all the company codes stored in database and It will store new company codes of excel file</h6>
                                <ol class="text-danger">
                                    <li>
                                        Data Should be entered in given format<br />
                                        <img src="~/Content/assets/images/watchlistformat.jpg" />
                                    </li>
                                    <li>To download excel format for entry please <a href="~/Content/watchlistformat.xlsx">Click here</a></li>
                                </ol>
                                <div class="col-md-6">
                                    <div class="form-group fill">
                                        <label for="FinanacialYear">Choose Excel File</label>
                                        <input type="file" id="uploadfile" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group fill">
                                        <div class="btn btn-primary" data-formid="frmUploadWatchlist" id="btnImport">Import Data</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="dt-responsive table-responsive">
                                <table id="WatchlistTable" class="table table-striped table-bordered nowrap">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</form>
<!-- [ Main Content ] end -->
<!-- datatable Js -->

<script src="@Url.Content("~/Content/assets/js/plugins/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.bootstrap4.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/pages/data-basic-custom.js")"></script>

<script src="@Url.Content("~/Scripts/Custom/Watchlist/WatchlistDatatable.js")"></script>

<script src="@Url.Content("~/Content/assets/js/plugins/buttons.colVis.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.print.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/pdfmake.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/jszip.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.buttons.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.html5.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.bootstrap4.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/pages/data-export-custom.js")"></script>

<script>
    var LoadWatchlist = "@Url.Content("~/Watchlist/LoadWatchlist")"
    var InsertWatchlist= "@Url.Content("~/Watchlist/AddEditDeleteWatchlist")"
    var EditWatchlist = "@Url.Content("~/Watchlist/EditWatchlist")"
    var DeleteWatchlist = "@Url.Content("~/Watchlist/DeleteWatchlist")"

    var uploadWatchlistFileUrl = "@Url.Content("~/Watchlist/UploadFile")"
</script>