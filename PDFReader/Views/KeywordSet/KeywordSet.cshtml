@model PDFReader.Models.KeywordSetModel

@{
    ViewBag.Title = "Keyword Set Master";
}

<!-- data tables css -->
<link rel="stylesheet" href="@Url.Content("~/Content/assets/css/plugins/dataTables.bootstrap4.min.css")">
<link href="@Url.Content("~/Content/Custom.css")" rel="stylesheet" />


<!-- [ Main Content ] start -->
<form id="frm_keywordSet" method="post" action="#" role="form" novalidate="novalidate">
    <div class="row">
        <!-- [ sample-page ] start -->
        <div class="col-sm-12">
            <div class="card">

                <div class="card-header">
                    <h5>Add/Edit/Delete Keywords</h5>
                            
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="form-group fill">

                                        @Html.TextBoxFor(Model => Model.SM_NAME, new { @class = "form-control", placeholder = "Enter Set Name", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group fill">
                                        <div class="btn notifications btn-success has-ripple" data-type="success" data-from="top" data-align="right" id="btnsubmit">Submit</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            
                        <div class="col-md-7">
                            <div class="row" style="padding:5px; background-color:#fbf4bd;">
                                <ol>
                                    <li>For Edit or Delete Keyword Set Master Name click on that Set Master Name showing in blue color from table given below</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="dt-responsive table-responsive">
                                        <table id="KeywordSetTable" class="table table-striped table-bordered nowrap">
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</form>
<!-- [ Main Content ] end -->
    
<!-- datatable Js -->

<script src="@Url.Content("~/Content/assets/js/plugins/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.bootstrap4.min.js")"></script>

<script src="@Url.Content("~/Content/assets/js/plugins/buttons.colVis.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.print.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/pdfmake.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/jszip.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.buttons.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.html5.min.js")"></script> 
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.bootstrap4.min.js")"></script>
   
<script src="@Url.Content("~/Scripts/Custom/Keyword/KeywordSetDatatable.js")"></script>

<script>
    var LoadKeywords = "@Url.Content("~/KeywordSet/LoadKeyword")"
    var InsertKeywords= "@Url.Content("~/KeywordSet/AddKeyword")"
</script>