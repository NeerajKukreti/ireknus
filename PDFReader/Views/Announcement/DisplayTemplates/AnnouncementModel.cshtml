@*blue, green, red, yellow*@
@model PDFReader.Models.AnnouncementModel

<div class="col-sm-12">
    <div class="card card-border-c-blue">
        <div class="card-header">
            <div style="padding: 5px 0px 1px 9px;
        border-radius: 5px;
        font-weight: 700;
        background-color: beige;
        display: block;
        word-break: break-word;
        color: #4680ff !important
    " class="col-md-10 text-secondary float-left">@Html.Raw(Model.NEWS_SUBJECT)</div>
            <div class="col-md-2 label label-primary float-right"> @(DateTime.Parse(Model.NEWS_SUBMISSION_DATE).ToString("dddd, dd MMMM yyyy")) </div>
        </div>
        <div class="card-body card-task">
            <div class="row">
                <div class="col-sm-10">
                    <p class="task-detail">@Html.Raw(Model.HEAD_LINE)</p>
                    @*<p class="task-due">@(Model.HEAD_LINE)</p>*@
                </div>
                <div class="col-sm-2">
                    <a target="_blank" href="https://www.bseindia.com/xml-data/corpfiling/AttachLive/@Html.Raw(Model.ATTACHMENT)"><i class="fas fa-file-pdf"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>