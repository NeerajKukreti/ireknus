@model PDFReader.Models.AlertModel

<!-- data tables css -->
<link rel="stylesheet" href="@Url.Content("~/Content/assets/css/plugins/dataTables.bootstrap4.min.css")">
<link href="@Url.Content("~/Content/Custom.css")" rel="stylesheet" />
<style>
    div.dataTables_scrollHeadInner thead {
        height: 10em;
    }
</style>
<!-- [ Main Content ] start -->
<form id="frm_keywordSet" method="post" action="#" role="form" novalidate="novalidate">
    <div class="row">
        <!-- [ sample-page ] start -->
        <div class="col-sm-12">
            <div class="card">

                <div class="card-header">
                    <h5>Alert Report</h5>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group fill">
                                        <div class="form-group fill">
                                            @Html.DropDownListFor(model => model.ALERT_ID, new List<SelectListItem>(Model.AlertList), "All Alert", new { @class = "form-control", placeholder = "Alert Name" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group fill">
                                        <label class="lblSelectDate" style="color: #4680ff; float: right">
                                            <b>Select Date</b>
                                            <input class="form-control datepicker" type="date" id="dtAlertRpt" name="dtAlertRpt">

                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group fill">
                                        <div class="btn btn-outline-primary btn-sm" data-type="success" data-from="top" data-align="right" id="btnsubmit">Search</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="dt-responsive table-responsive">
                                <table id="tblAlertReport" class="table table-striped table-bordered nowrap">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</form>
<!-- [ Main Content ] end -->


<script src="@Url.Content("~/Content/assets/js/plugins/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.bootstrap4.min.js")"></script>

<script src="@Url.Content("~/Content/assets/js/plugins/buttons.colVis.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.print.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/pdfmake.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/jszip.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/dataTables.buttons.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.html5.min.js")"></script>
<script src="@Url.Content("~/Content/assets/js/plugins/buttons.bootstrap4.min.js")"></script>


<script src="~/Scripts/Custom/alertreport/alertreport-datatable.js"></script>
<script>

    var alertReportListUrl = "@Url.Content("~/Announcement/GetAlertReportList")";

</script>
